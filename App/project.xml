<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="Influenca" company="neuroMADLAB" file="Influenca" package="com.neuroMADLAB.Influenca" version="0.0.2" />
	
	<!-- output -->
	<app main="Main" title="Influenca" company="neuroMADLAB" file="Influenca" path="bin" package="com.neuroMADLAB.Influenca" version="0.0.2" />
	
	<window background="#000000" />
	<!-- <window width="1600" height="900" unless="mobile" /> -->
	<!-- <window orientation="landscape" vsync="false" antialiasing="0" if="cpp" /> -->
	<!-- <window fullscreen="true" /> -->
	<window width="1920" height="1080" unless="mobile" />
	<window if="mobile" orientation="landscape" fullscreen="true" width="0" height="0" />
	
	<!-- Android specific settings -->
	<android target-sdk-version="28" install-location="preferExternal" if="android" />

	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<source path="assets" />
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<haxelib name="record-macros" />
	<haxelib name="haxeui-core" />
	<haxelib name="haxeui-openfl" />
	<haxelib name="random" />
	
	<!-- assets -->
	<icon path="assets/influenca.svg" embed="true" />
